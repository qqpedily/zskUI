<script type="text/javascript">
	      $(document).ready(function () {
	$("#tab_2").click(function() {
		location.href = "/Template/TemplateFieldEdit/" + "0cb240c4-2f08-497a-82f7-d36315c494f7";
	});

	// TODO - implement tab 3 and 4

	$("#tab_3").click(function () {
			
	});

	$("#tab_4").click(function () {

	});


	$("#tab_5").click(function() {
		location.href = "/Template/FullTextPermissionEdit/" + "0cb240c4-2f08-497a-82f7-d36315c494f7";
	});

	$(".add").click(function() {
		var html = [];
		$("#aSelect :selected").each(function(index,item) {
			html = '<option value="' + $(item).val() + '">' + $(item).text() + '</option>';
			$("#bSelect").append(html);
		});
		$("#aSelect :selected").remove();
		return false;
	});
	$(".del").click(function() {
		var html = [];
		$("#bSelect :selected").each(function() {
			html = '<option value="' + $(this).val() + '">' + $(this).text() + '</option>';
			$("#aSelect").prepend(html);
		});
		$("#bSelect :selected").remove();
		return false;
	});
	$(".up").click(function() {
		var op = $('#bSelect option:selected');
		if(op.length) {
			if($(this).hasClass("up")) {
				op.first().prev().before(op);
			}
		}
	});
	$(".down").click(function() {
		var op = $('#bSelect option:selected');
		if(op.length) {
			if($(this).hasClass("down")) {
				op.last().next().after(op);
			}
		}
	});

	$("#btn_save_meta_data").click(function() {

	var strMetaDataIDs = '';

	$("#bSelect option").each(function() {
		strMetaDataIDs += $(this).val() + ',';
	});
	$("#input_meta_data_ids").val(strMetaDataIDs);

	$("#form_meta_data_ids").submit();
	});
	})
</script>